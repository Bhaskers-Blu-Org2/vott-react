{
    "compilerOptions": {
        "outDir": "dist/lib",
        "declaration": true,
        "target": "es6",
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "lib": [
            "es5",
            "es6",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "src"
    ]
}